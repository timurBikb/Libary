<Window x:Class="BikbulatovLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BikbulatovLibrary"
        mc:Ignorable="d"
        Title="Курсовая_Бикбулатов" 
        Height="700" Width="970" 
        MinHeight="700" MinWidth="970" 
        Icon="Resources/icon.png" 
        FontFamily="Comic Sans MS" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Border Background="#FF54AEDA" ></Border>
        <Image Source="/Resources/logo.png"  HorizontalAlignment="Left"></Image>
        <TextBlock Text="Библиотеки" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
